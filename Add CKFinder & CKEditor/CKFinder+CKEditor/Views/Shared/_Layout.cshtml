<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <div id="finderArea" class="col-md-8">
            <div >
                @Html.TextBox("urlImage", null, new { @class = "col-md-6" })
            </div>

            <input type="button" class="btn btn-default " id="btnSelectImage" value="Chọn ảnh" />
        </div>
        <br />
        <div id="editorArea" class="col-md-8">
            @Html.TextArea("editor", new { @placeholder = "Nhập nội dung" })"
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
